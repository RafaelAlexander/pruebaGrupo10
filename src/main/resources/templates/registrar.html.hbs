            <form class="row g-3 needs-validation" action="/register" method="post" novalidate>
                <div class="col-md-3 position-relative">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="col-md-3 position-relative">
                    <label for="subname" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="subname" name="subname" required>
                </div>
                <div class="col-md-3 position-relative">
                    <label for="user" class="form-label">Username</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="user">@</span>
                        <input type="text" class="form-control" id="user" aria-describedby="validationTooltipUsernamePrepend" required>
                    </div>
                </div>
                <div class="col-md-3 position-relative">
                    <label for="validationTooltip04" class="form-label">Rol</label>
                    <select class="form-select" id="rol" name="rol" required>
                        {{#each roles}}
                            <option selected disabled value="">Seleccione</option>
                            <option>{{roles.this}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-4 position-relative">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
                <div class="col-md-4 position-relative">
                    <label for="repassword" class="form-label">Re-Password</label>
                    <input type="password" class="form-control" id="repassword" name="repassword" required>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Enviar</button>
                </div>
            </form>
        </div>
