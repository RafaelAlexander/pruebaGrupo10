                        <h3>No hay postulaciones Pendientes.</h3>
                    </div>
                    {{else}}
                    <table class="table text-white">
                        <tr>
                            <th>Sector</th>
                            <th>Nombre Miembro</th>
                            <th>Apellido Miembro</th>
                            <th></th>
                        </tr>
                        {{#each postulacionesPendientes}}
                        <form action="/postulaciones/aceptar" method="post">
                            <tr>
                                <td style="display:none"><input type="text" name="idSector" value={{sector.id}} readonly></td>
                                <td><input type="text" name="sectorName" value={{sector.name}} readonly></td>
                                <td><input type="text" name="nombreMiembro" value={{miembro.nombre}} readonly></td>
                                <td><input type="text" name="apellidoMiembro" value={{miembro.apellido}} readonly></td>
                                <td align="center">
                                    <div class="boton-aceptar">
                                        <input class="btn btn-success" type="submit" value="Aceptar">
                                    </div>
                                </td>
                            </tr>
                        </form>
                        <form action="/postulaciones/rechazar" method="post">
                            <tr>
                                <td style="display:none"><input type="text" name="idSector" value={{sector.id}} readonly></td>
                                <td><input type="text" name="sectorName" value={{sector.name}} readonly></td>
                                <td><input type="text" name="nombreMiembro" value={{miembro.nombre}} readonly></td>
                                <td><input type="text" name="apellidoMiembro" value={{miembro.apellido}} readonly></td>
                                <td align="center">
                                    <div class="boton-rechazar">
