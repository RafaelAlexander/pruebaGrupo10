{{# partial "contenido" }}
		<section>
			<div class="d-flex flex-column flex-shrink-0 p-5 text-white">
                <div class="jumbotron p-5 bg-black">
                    <div class="container-postulacion">
                        <div class="titulo-postulacion">
                            <h1>Postulaci贸n a una Organizaci贸n</h1>
                        </div>
                        {{#if hayOrganizacionesDisponibles}}
                        <form action="/postulaciones/nueva" method="post">
                            <select class="list-organizaciones" name="razonSocial">
                            {{#each organizacionSector}}
                                <option>{{razonSocial}} - {{sector}}</option>
                            {{/each}}
