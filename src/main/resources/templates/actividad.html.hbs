{{# partial "contenido" }}
    <div class="d-flex flex-column flex-shrink-0 p-5 text-white">
        <div class="jumbotron p-5 bg-black">
            <h1>Creacion de actividad</h1>
                {{#if organizacion}}
                <form action="/actividades/nueva" method="post">
                <p>Razon Social: {{organizacion.razonSocial}} ({{organizacion.id}})</p>
                <label for="periodicidad">Periodicidad:</label>
                       <select name="periodicidad" id="periodicidad">
                            <option value="Anual">Anual</option>
                            <option value="Mensual">Mensual</option>
                       </select><br>
                <label for="tipoDeConsumo">Tipo de Consumo: </label>
                <select name="tipoDeConsumo" id="tipoDeConsumo">
                            {{#each tiposDeConsumo}}
                            <option value={{nombre}}>{{nombre}}</option>
                            {{/each}}
                </select>
                <br>
                <label for="consumo">Consumo:</label>
                <input type="number" id="consumo" name="consumo" value="0">
                <br>
                    <label for="csv">Cargar desde CSV: </label>
                    <input type="file" id="csv" name="csv">
                <br><br><input class="btn btn-primary" type="submit" value="Crear Actividad">
                </form>
                {{else}}
                  <table class="table table-dark">
                    <thead>
                    <tr><th scope="col">No tiene organizacion pasa crear actividad.</th></tr>
                    </thead>
                    </table>
                {{/if}}
        </div>
    </div>
{{/partial}}
